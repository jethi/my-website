## topbar

```
#!/bin/sh

cdate() {
	date="$(date | awk '{print $1, $2, $3}')"
	time="$(date +%r)"
	echo " [$date  $time] "
}

mem() {
	mem="$(free -m | awk '/Mem:/ { printf $3"M / "$2"M" }')"
	echo "[RAM: $mem] "
}

cputemp() {
	temp="$(cat /sys/devices/virtual/thermal/thermal_zone0/temp)"
	temp="$(expr $temp / 1000)"
	echo "[CPU: $temp C]"
}

status() {
	echo "$(cdate) $(mem) $(cputemp)"
}

while true; do
	xsetroot -name "$(status)"
	sleep 1
done
```
